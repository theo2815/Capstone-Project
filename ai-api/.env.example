# ============================================================
# EventAI API - Environment Configuration
# ============================================================
# Copy this file to .env and update values for your environment.
# NEVER commit .env to version control.
# ============================================================

# Application
APP_NAME=EventAI API
APP_VERSION=1.0.0
DEBUG=true
LOG_LEVEL=DEBUG
ENVIRONMENT=development

# Server
HOST=0.0.0.0
PORT=8000
WORKERS=1

# Database (PostgreSQL + pgvector)
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/eventai

# Redis
REDIS_URL=redis://localhost:6379/0

# ML Models
MODEL_DIR=./models
USE_GPU=false
GPU_DEVICE=0

# Blur Detection
BLUR_THRESHOLD=100.0

# Face Recognition
FACE_SIMILARITY_THRESHOLD=0.4
FACE_DET_SIZE=640

# Auth
API_KEY_HEADER=X-API-Key
JWT_PUBLIC_KEY=
JWT_ALGORITHM=RS256

# Rate Limiting
RATE_LIMIT_DEFAULT=60
RATE_LIMIT_BURST=10

# CORS
ALLOWED_ORIGINS=["http://localhost:3000","http://localhost:5173"]

# Webhooks
WEBHOOK_TIMEOUT=10
WEBHOOK_MAX_RETRIES=3

# File Upload
MAX_FILE_SIZE=10485760
MAX_BATCH_SIZE=100
